{
  "name": "brand-tool-kit",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "analyze": "BUNDLE_ANALYZE=both yarn build",
    "coverage": "yarn test --coverage --watchAll=false --logHeapUsage --maxWorkers=2 --verbose && jest-coverage-badges",
    "clean": "rm -rf node_modules && yarn install",
    "cypress": "cypress open",
    "cypress:headless": "CYPRESS_RETRIES=2 cypress run",
    "cypress:firefox": "CYPRESS_RETRIES=2 cypress run --browser firefox",
    "cypress:chrome": "CYPRESS_RETRIES=2 cypress run --browser chrome",
    "dev": "yarn env-cmd -f ./.env.development --no-override next",
    "build": "next build",
    "build:dev": "yarn env-cmd -f ./.env.development yarn build",
    "lint": "tslint -c tslint.json 'src/**/*.{ts,tsx}'",
    "pretty-quick": "pretty-quick",
    "start": "next start",
    "start:cypress": "yarn build:dev && next start",
    "start:development": "yarn build:dev && next start",
    "test": "TZ=Europe/Paris yarn env-cmd -f ./.env.test jest --env=jsdom --watchAll=false --logHeapUsage --maxWorkers=2 --verbose",
    "test:cypress": "start-server-and-test build:dev http://localhost:3000 cypress:headless",
    "test:cypress:chrome": "start-server-and-test build:dev http://localhost:3000 cypress:chrome",
    "test:cypress:firefox": "start-server-and-test build:dev http://localhost:3000 cypress:firefox",
    "test:watch": "yarn env-cmd -f ./.env.test jest --env=jsdom --watch --config=./jest.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint --fix && yarn pretty-quick --staged"
    }
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "dependencies": {
    "swr": "^0.2.2"
  },
  "devDependencies": {
    "@babel/core": "^7.10.2",
    "@sentry/browser": "^5.15.5",
    "@sentry/node": "^5.16.1",
    "@svgr/webpack": "^5.4.0",
    "@types/enzyme": "^3.10.5",
    "@types/enzyme-adapter-react-16": "^1.0.6",
    "@types/git-rev-sync": "^2.0.0",
    "@types/jest": "^25.2.3",
    "@types/next": "^9.0.0",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-gtm-module": "^2.0.0",
    "@types/styled-components": "^5.1.0",
    "@types/yup": "^0.29.3",
    "@zeit/next-bundle-analyzer": "^0.1.2",
    "@zeit/next-source-maps": "0.0.4-canary.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-styled-components": "^1.10.7",
    "cypress": "^4.7.0",
    "cypress-plugin-retries": "^1.5.2",
    "dotenv-webpack": "^1.8.0",
    "env-cmd": "^10.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "full-icu": "^1.3.1",
    "git-rev-sync": "^2.0.0",
    "husky": "^4.2.5",
    "i18next": "^19.4.5",
    "jest": "^26.0.1",
    "jest-coverage-badges": "^1.1.2",
    "jest-localstorage-mock": "^2.4.2",
    "jest-next-dynamic": "^1.0.1",
    "moment-locales-webpack-plugin": "^1.2.0",
    "next": "^9.4.4",
    "next-images": "^1.4.0",
    "polished": "^3.6.4",
    "prettier": "^2.0.5",
    "pretty-quick": "^2.0.1",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-gtm-module": "^2.0.8",
    "react-i18next": "^11.5.0",
    "start-server-and-test": "^1.11.0",
    "styled-components": "^5.1.1",
    "tslint": "^6.1.2",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^5.0.0",
    "typescript": "^3.9.3",
    "unfetch": "^4.1.0",
    "yup": "^0.29.1"
  }
}
